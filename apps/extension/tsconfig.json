{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Web App",
  "extends": ["../../tsconfig.base.json"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.json", "declarations.d.ts"],
  "exclude": ["node_modules", ".output", "wxt.config.ts"],
  "references": [
    {
      "path": "../../packages/wallet"
    },
    {
      "path": "../../packages/utilities"
    },
    {
      "path": "../../packages/uniswap"
    },
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/sessions"
    },
    {
      "path": "../../packages/notifications"
    },
    {
      "path": "../../packages/gating"
    },
    {
      "path": "../../packages/api"
    }
  ],
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "resolveJsonModule": true,
    "types": ["chrome", "jest", "node"],
    "paths": {
      "src/*": ["./src/*"],
      "e2e/*": ["./e2e/*"]
    }
  }
}
